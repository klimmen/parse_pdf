<div class="hero-unit">
<h2 class="alert alert-info center"> All Clients</h2>
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<%= form_for :client, url: clients_path do |f| %>
  <div class="form-group ">
  <%= f.file_field :picture, required: true, class: " btn-primary" %>
  </div>
  <div class="form-group ">
  <%= f.submit "Upload", class: "btn btn-primary" %>
  </div>
<% end %>
<table class="table  table-bordered table-condensed">
  <tr>
  <th>ID</th>
    <th>Client number</th>
    <th>Bill number</th>
    <th>Cellular numbers</th>
    <th>Individual details</th>
  </tr>
 
<% @clients.each do |client| %>
  <tr>
    <td><%= client.id %></td>
    <td><%= client.client_number %></td>
    <td><%= client.bill_number %></td>
    <td><%= link_to 'Cellular number', cellular_number_client_path(client), class: "btn btn-sm btn-info" %></td>
    <td><%= link_to 'Individual detail', individual_detail_client_path(client) , class: "btn btn-sm btn-success" %></td>
    <td><%= link_to 'Destroy', client_path(client), class: "btn btn-sm btn-danger",
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
</div>